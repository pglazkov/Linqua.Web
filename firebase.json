{
  "hosting": {
    "public": "dist/wwwroot",
    "rewrites": [
      {
        "source": "/api/**", "function": "main"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "src/functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
