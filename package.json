{
  "name": "linqua",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "cypress": "cypress",
    "start": "run-p --race start:firebase:functions start:ng:local-api test:watch e2e:watch:dev",
    "start:ng:local-api": "ng serve --proxy-config proxy.conf.local.json",
    "start:ng:prod-api": "ng serve --proxy-config proxy.conf.prod.json",
    "start:prod": "http-server dist/wwwroot -p 8080 --proxy https://linqua-app.com",
    "start:prod:e2e": "run-p --race start:prod e2e:watch",
    "start:firebase:functions": "firebase serve --only functions",
    "build": "ng build",
    "build:prod": "ng build --prod --aot --build-optimizer",
    "test:watch": "ng test",
    "test": "ng test --watch=false",
    "test:ci": "ng test --watch=false --no-progress --browsers=ChromeNoSandbox",
    "lint": "ng lint",
    "e2e": "cypress run --browser chrome",
    "e2e:watch": "cypress open",
    "e2e:watch:prod": "run-p --race start:prod e2e:watch",
    "e2e:watch:dev": "cypress open --config baseUrl=http://localhost:3000",
    "e2e:ci": "run-p --race start:prod e2e",
    "http-server": "http-server",
    "npm-run-all": "npm-run-all",
    "ci": "run-s lint build test:ci build:prod e2e:ci",
    "deploy:firebase": "firebase deploy",
    "deploy": "run-s ci deploy:firebase"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.2",
    "@angular/cdk": "6.0.2",
    "@angular/common": "6.0.2",
    "@angular/compiler": "6.0.2",
    "@angular/core": "6.0.2",
    "@angular/forms": "6.0.2",
    "@angular/http": "6.0.2",
    "@angular/material": "6.0.2",
    "@angular/platform-browser": "6.0.2",
    "@angular/platform-browser-dynamic": "6.0.2",
    "@angular/service-worker": "6.0.2",
    "core-js": "^2.4.1",
    "firebase": "^4.6.1",
    "lodash-es": "^4.17.10",
    "ng-firebase-lite": "^1.0.2",
    "rxjs": "^6.1.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.3",
    "@angular/cli": "^6.0.3",
    "@angular/compiler-cli": "6.0.2",
    "@angular/language-service": "6.0.2",
    "@firebase/app-types": "^0.1.1",
    "@types/jasmine": "^2.8.7",
    "@types/jasminewd2": "~2.0.2",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "~9.4.6",
    "codelyzer": "^4.3.0",
    "cypress": "^2.1.0",
    "http-server": "^0.11.1",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^1.1.0",
    "npm-run-all": "^4.1.2",
    "protractor": "~5.3.0",
    "ts-node": "~3.3.0",
    "tslint": "^5.10.0",
    "typescript": "2.7.2"
  }
}
